@page "/"
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<style>
    .home-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    h1, h2 {
        color: #2c3e50;
    }

    .btn-group .btn {
        min-width: 180px;
    }

    @@media (max-width: 480px) {
        .btn-group {
            flex-direction: column;
        }

        .btn-group .btn {
            margin-bottom: 1rem;
            width: 100%;
            min-width: unset;
        }
    }
</style>

<div class="home-container text-center">
    <h1 class="mt-5 mb-3">Welcome to Train Components Management App!</h1>
    <h2 class="display-5 mb-5 text-primary fw-bold">Fleet Component Tracker</h2>
    <div class="btn-group" role="group" aria-label="Main navigation buttons">
        <NavLink class="btn btn-lg btn-primary px-4 me-3" href="/uploadcomponents">Upload Component CSV</NavLink>
        <NavLink class="btn btn-lg btn-outline-secondary px-4" href="/componentsview">View Components Grid</NavLink>
        <NavLink class="btn btn-lg btn-outline-dark px-4" href="/dashboard">View Dashboard</NavLink>
    </div>
</div>

